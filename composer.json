{
	"name"        : "holotree/ht-build",
	"description" : "HoloTree build stack.",
	"authors"     : [
		{
			"name"    : "Josh Pollock",
			"email"   : "Josh@JoshPress.net",
			"homepage": "http://joshpress.net/"
		}
	],
	"type"        : "project",
	"minimum-stability": "dev",
	"repositories": [
		{
			"type": "composer",
			"url" : "http://wpackagist.org"
		},
        {
            "type": "git",
            "url": "https://github.com/HoloTree/holotree"
        },
        {
            "type": "git",
            "url": "https://github.com/HoloTree/ht_dms"
        },
        {
            "type": "git",
            "url": "https://github.com/HoloTree/gus-ui-mods"
        },
        {
            "type": "git",
            "url": "https://github.com/shelob9/app_starter"
        },
        {
            "type": "git",
            "url": "https://github.com/pods-framework/pods-json-api"
        }

	],
	"config"      : {
		"vendor-dir":  "vendor"
	},
	"require"     : {
        "johnpbloch/wordpress"                                  : "3.9.2",
		"wpackagist-plugin/pods"                                : "*",
		"wpackagist-plugin/pods-ajax-views"                     : "*",
        "wpackagist-plugin/pods-alternative-cache"              : "*",
        "wpackagist-plugin/mobble"                              : "*",
        "wpackagist-plugin/json-rest-api"                       : "*",
        "holotree/holotree"                                     : "*",
        "holotree/ht_dms"                                       : "*",
        "holotree/gus_ui_mods"                                  : "*",
        "shelob9/app_starter"                                   : "*",
        "pods-framework/pods-json-api"                          : "*"
	},
	"require-dev" : {
		"wpackagist-plugin/log-deprecated-notices"              : "*",
        "wpackagist-plugin/debug-bar"                           : "*",
        "wpackagist-plugin/debug-bar-console"                   : "*",
        "wpackagist-plugin/user-switching"                      : "*",
        "wpackagist-plugin/simply-show-ids"                     : "*"
	},
	"extra"       : {
		"wordpress-install-dir": "htdocs/wp",
		"installer-paths": {
			"htdocs/ht/plugins/{$name}/" : ["type:wordpress-plugin"],
			"htdocs/ht/themes/{$name}/"  : ["type:wordpress-theme"]
		},
        "webroot-dir": "htdocs/wp",
        "webroot-package": "wordpress/wordpress"
	}
}
