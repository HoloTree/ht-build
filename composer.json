{
	"name"        : "simonwheatley/vvv-demo-2",
	"description" : "VVV Auto Bootstrap Demo 2: WordPress stack via Composer",
	"authors"     : [
		{
			"name"    : "Simon Wheatley",
			"email"   : "simonw@codeforthepeople.com",
			"homepage": "http://codeforthepeople.com/"
		}
	],
	"type"        : "project",
	"minimum-stability": "dev",
	"repositories": [
		{
			"type": "composer",
			"url" : "http://wpackagist.org"
		},
        {
            "type": "package",
            "package": {
                "name": "wordpress/wordpress",
                "version": "3.9.1",
                "type": "webroot",
                "dist": {
                    "type": "zip",
                    "url": "https://wordpress.org/wordpress-3.9.1.zip"
                },
                "require" : {
                    "fancyguy/webroot-installer": "1.1.0"
                }
            }
        }
	],
	"config"      : {
		"vendor-dir":  "vendor"
	},
	"require"     : {
        "wordpress/wordpress"                                   : "3.9.1",
		"wpackagist-plugin/pods"                                : "*",
		"wpackagist-plugin/pods-ajax-views"                     : "*",
        "wpackagist-plugin/pods-alternative-cache"              : "*",
        "wpackagist-plugin/mobble"                              : "*"

	},
	"require-dev" : {
		"wpackagist-plugin/log-deprecated-notices"              : "*",
        "wpackagist-plugin/debug-bar"                           : "*",
        "wpackagist-plugin/debug-bar-console"                   : "*",
        "wpackagist-plugin/simply-show-ids"                     : "*"
	},
	"extra"       : {
		"wordpress-install-dir": "htdocs/",
		"installer-paths": {
			"htdocs/ht/plugins/{$name}/" : ["type:wordpress-plugin"],
			"htdocs/ht/themes/{$name}/"  : ["type:wordpress-theme"]
		},
        "webroot-dir": "htdocs/wp",
        "webroot-package": "wordpress/wordpress"
	}
}
